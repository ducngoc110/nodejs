{{# each tours }}
    <tr>
        <td class="uk-text-center">
            <input type="checkbox" class="atl-checkbox-child-js" />
        </td>
        <td class="uk-text-center">
            <img class="md-user-image" style="height: 34px;" src="{{#if meta.featured}}/uploads/tour/{{meta.featured}}{{else}}/assets/backend/img/blank.png{{/if}}">
        </td>
        <td>
            {{ name }}
        </td>
        <td>
            {{ day }}
        </td>
        <td>
            {{#each ../settings.listAgeRange }}
                {{#ifCondi ../age '==' @key }}{{../this}}</span>{{/ifCondi}}
            {{/each }}
        </td>
        <td>
            {{#each ../settings.listStyle }}
                {{#ifCondi ../style '==' @key }}{{../this}}</span>{{/ifCondi}}
            {{/each }}
        </td>
        <td>
            {{#each ../settings.listLocation }}
                {{#checkCondi ../destination @key }}{{../this}},{{/checkCondi}}
            {{/each }}
        </td>
        <td class="uk-text-center">
            {{#ifCondi status '==' 'on' }}<span class="uk-badge">Active</span>{{/ifCondi}}
            {{#ifCondi status '==' 'off' }}<span class="uk-badge uk-badge-danger">Deactive</span>{{/ifCondi}}
        </td>
        <td class="uk-text-center">
            <a href="/tour-edit/{{ _id }}">
                <i class="md-icon material-icons">edit</i>
            </a>
            <a href="#" class="atl-manage-tour-delete" data-id="{{ _id }}">
                <i class="md-icon material-icons">delete</i>
            </a>
        </td>
    </tr>
{{/each }}