<div class="md-card uk-margin-medium-bottom">
    <div class="md-card-content">
        <h3 class="heading_a uk-margin-bottom">Tours Management</h3>
        <div class="uk-grid">
            <div class="uk-width-medium-2-3">
                <div class="uk-grid uk-grid-small atl-action-manage">
                    <div class="uk-width-medium-1-6">
                        <select id="select_demo_1" name="atl-action-manage" data-md-selectize>
                            <option value=""> Action </option>
                            <option value="delete">Delete</option>
                            <option value="deleteAll">Delete All</option>
                        </select>
                    </div>
                    <div class="uk-width-medium-1-10">
                        <a class="md-btn atl-action-apply-js">Apply</a>
                    </div>
                </div>
            </div>
            <div class="uk-width-medium-1-3">
                <div class="uk-input-group">
                    <span class="uk-input-group-addon">
                        <i class="md-list-addon-icon material-icons material-icons">search</i>
                    </span>
                    <div class="md-input-wrapper"><label>Search</label><input type="text" class="md-input atl-tour-manage-search-js"><span class="md-input-bar"></span></div>
                </div>
            </div>
        </div>
        <br>
        <div class="uk-overflow-container">
            <table class="uk-table uk-table-hover">
                <thead>
                <tr>
                    <th class="uk-text-center uk-text-nowrap">
                        <input type="checkbox" class="atl-checkbox-primary-js" />
                    </th>
                    <th class="uk-text-center uk-width-1-10 uk-text-nowrap"> 
                        Avatar 
                    </th>
                    <th class="uk-width-2-10 uk-text-nowrap">Name</th>
                    <th class="uk-width-1-10 uk-text-nowrap">Number day</th>
                    <th class="uk-width-1-10 uk-text-nowrap">Age</th>
                    <th class="uk-width-1-10 uk-text-nowrap">Style</th>
                    <th class="uk-width-2-10 uk-text-nowrap">Destinations</th>
                    <th class="uk-width-1-10 uk-text-center uk-text-nowrap">Status</th>
                    <th class="uk-width-1-10 uk-text-center uk-text-nowrap">Actions</th>
                </tr>
                </thead>
                <tbody class="atl-list-tour-not-js">
                    {{# each tours }}
                    <tr>
                        <td class="uk-text-center">
                            <input type="checkbox" class="atl-checkbox-child-js" />
                        </td>
                        <td class="uk-text-center">
                            <img class="md-user-image" style="height: 34px;" src="{{#if meta.featured}}/uploads/tour/{{meta.featured}}{{else}}/assets/backend/img/blank.png{{/if}}">
                        </td>
                        <td>
                            {{ name }}
                        </td>
                        <td>
                            {{ day }}
                        </td>
                        <td>
                            {{#each ../settings.listAgeRange }}
                                {{#ifCondi ../age '==' @key }}{{../this}}</span>{{/ifCondi}}
                            {{/each }}
                        </td>
                        <td>
                            {{#each ../settings.listStyle }}
                                {{#ifCondi ../style '==' @key }}{{../this}}</span>{{/ifCondi}}
                            {{/each }}
                        </td>
                        <td>
                            {{#each ../settings.listLocation }}
                                {{#checkCondi ../destination @key }}{{../this}},{{/checkCondi}}
                            {{/each }}
                        </td>
                        <td class="uk-text-center">
                            {{#ifCondi status '==' 'on' }}<span class="uk-badge">Active</span>{{/ifCondi}}
                            {{#ifCondi status '==' 'off' }}<span class="uk-badge uk-badge-danger">Deactive</span>{{/ifCondi}}
                        </td>
                        <td class="uk-text-center">
                            <a href="/tour-edit/{{ _id }}">
                                <i class="md-icon material-icons">edit</i>
                            </a>
                            <a href="#" class="atl-manage-tour-delete" data-id="{{ _id }}">
                                <i class="md-icon material-icons">delete</i>
                            </a>
                        </td>
                    </tr>
                    {{/each }}
                </tbody>
                <tbody class="atl-list-tour-js"></tbody>
            </table>
        </div>
        <br>
       <div class="uk-grid uk-grid-small atl-action-manage">
            <div class="uk-width-medium-1-6">
                <select id="select_demo_1" name="atl-action-manage" data-md-selectize>
                    <option value=""> Action </option>
                    <option value="delete">Delete</option>
                    <option value="deleteAll">Delete All</option>
                </select>
            </div>
            <div class="uk-width-medium-1-10">
                 <a class="md-btn atl-action-apply-js">Apply</a>
            </div>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent md-fab-small" data-uk-tooltip="{pos:'left'}"  title="Create new tour" href="/tour-add">
            <i class="material-icons">&#xE145;</i>
        </a>
    </div>
</div>

<script src="/js/backend/tour/atl-backend-tour.js"></script>